-- XURRAS SCRIPT - LOADER COMPLETO (IMAGEM GIGANTE)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Configurações
local MUSIC_ID = "rbxassetid://72605947493715" 
local IMAGE_URL = "rbxthumb://type=Asset&id=17230115865&w=420&h=420"
local LOADER_DURATION = 8
local SCRIPT_URL = "https://raw.githubusercontent.com/Emanuelzk1533/scriptxurrasprincipal/refs/heads/main/script.lua"

-- Interface
local LoaderGui = Instance.new("ScreenGui")
LoaderGui.Name = "XurrasLoaderSystem"
LoaderGui.Parent = game.CoreGui
LoaderGui.DisplayOrder = 999

local MainFrame = Instance.new("Frame")
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 15)
MainFrame.BorderSizePixel = 0
MainFrame.Size = UDim2.new(1, 0, 1, 0)
MainFrame.Parent = LoaderGui

-- Container Central (Aumentado para caber a imagem maior)
local Container = Instance.new("Frame")
Container.BackgroundTransparency = 1
Container.Position = UDim2.new(0.5, -250, 0.5, -250)
Container.Size = UDim2.new(0, 500, 0, 500)
Container.Parent = MainFrame

-- IMAGEM GIGANTE (300x300)
local LogoIcon = Instance.new("ImageLabel")
LogoIcon.BackgroundTransparency = 1
LogoIcon.Position = UDim2.new(0.5, -150, 0, 0) -- Centralizando o novo tamanho (300/2 = 150)
LogoIcon.Size = UDim2.new(0, 300, 0, 300)
LogoIcon.Image = IMAGE_URL
LogoIcon.ScaleType = Enum.ScaleType.Fit
LogoIcon.Parent = Container

-- Título (Abaixo da Imagem Gigante)
local Title = Instance.new("TextLabel")
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0, 310)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Font = Enum.Font.GothamBold
Title.Text = "XURRAS SCRIPT"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 36
Title.Parent = Container

-- Barra de Progresso
local BarBG = Instance.new("Frame")
BarBG.BackgroundColor3 = Color3.fromRGB(30, 35, 50)
BarBG.BorderSizePixel = 0
BarBG.Position = UDim2.new(0.1, 0, 0, 370)
BarBG.Size = UDim2.new(0.8, 0, 0, 12)
BarBG.Parent = Container
Instance.new("UICorner", BarBG).CornerRadius = UDim.new(1, 0)

local Bar = Instance.new("Frame")
Bar.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
Bar.BorderSizePixel = 0
Bar.Size = UDim2.new(0, 0, 1, 0)
Bar.Parent = BarBG
Instance.new("UICorner", Bar).CornerRadius = UDim.new(1, 0)

-- Status
local Status = Instance.new("TextLabel")
Status.BackgroundTransparency = 1
Status.Position = UDim2.new(0, 0, 0, 395)
Status.Size = UDim2.new(1, 0, 0, 20)
Status.Font = Enum.Font.Gotham
Status.Text = "Carregando Script!..."
Status.TextColor3 = Color3.fromRGB(150, 150, 170)
Status.TextSize = 14
Status.Parent = Container

-- Música
local Sound = Instance.new("Sound")
Sound.SoundId = MUSIC_ID
Sound.Volume = 0.6
Sound.Parent = workspace
Sound:Play()

-- Lógica
spawn(function()
    local startTime = tick()
    while tick() - startTime < LOADER_DURATION do
        local progress = (tick() - startTime) / LOADER_DURATION
        Bar.Size = UDim2.new(math.min(progress, 1), 0, 1, 0)
        task.wait(0.05)
    end
    
    Bar.Size = UDim2.new(1, 0, 1, 0)
    Status.Text = "✅ Iniciando..."
    task.wait(0.5)
    
    Sound:Stop()
    Sound:Destroy()
    LoaderGui:Destroy()
    
    loadstring(game:HttpGet(SCRIPT_URL))()
end)
